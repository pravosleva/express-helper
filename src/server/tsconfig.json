{
  "compilerOptions": {
    "downlevelIteration": true,
    "target": "ES5",
    "removeComments": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "../../server-dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@getRandomInteger": ["./utils/getRandomInteger"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "**/tsconfig.json"
  ]
}
